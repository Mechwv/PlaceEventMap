<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/normalMargin">

        <EditText
            android:id="@+id/place_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginVertical="@dimen/normalMargin"
            android:hint="название места"

            android:textSize="20sp"
            android:inputType="text" />

            <TextView
                android:id="@+id/textViewAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="16dp"
                android:text="Address"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="0dp"
                android:text="" />


            <EditText
                android:id="@+id/place_lat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginVertical="@dimen/normalMargin"
                android:hint="latitude"

                android:textSize="20sp"
                android:autofillHints="@string/enter_party_name"
                android:inputType="text" />

            <EditText
                android:id="@+id/place_long"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginVertical="@dimen/normalMargin"
                android:hint="longitude"

                android:textSize="20sp"
                android:autofillHints="@string/enter_party_name"
                android:inputType="text" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/desc"
                    android:layout_height="96dp"
                    android:text="Описание"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/normalMargin"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:layout_width="wrap_content" />

                <EditText
                    android:id="@+id/desc_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="20"
                    android:gravity="top|start"
                    android:hint="прогулка в Поселке Шедоуфиндов"
                    android:inputType="textMultiLine"
                    android:minLines="1"
                    android:maxLines="2" />
            </LinearLayout>

            <Button
                android:id="@+id/update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Обновить информацию" />

            <Button
                android:id="@+id/watch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Посмотреть событие" />

            <Button
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Поделиться" />

            <Button
                android:id="@+id/watch_on_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Посмотреть на карте" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>