<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    <variable
        name="place"
        type="com.mechwv.placeeventmap.domain.model.Place" />
    </data>

<LinearLayout
    android:id="@+id/bottom_sheet_layout"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:behavior_peekHeight="62dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <LinearLayout
        android:id="@+id/bottom_sheet_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_light_primary"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceBody2"
            android:text="Информация о месте"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_light_tertiaryContainer"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/event_name"
                android:layout_height="48dp"
                android:text="Название"
                android:layout_marginEnd="@dimen/normalMargin"
                android:layout_marginStart="@dimen/normalMargin"
                android:padding="10dp"
                android:textSize="18sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:layout_width="match_parent" />

            <TextView
                android:id="@+id/date"
                android:layout_height="48dp"
                android:text="Широта"
                android:layout_marginEnd="@dimen/normalMargin"
                android:layout_marginStart="@dimen/normalMargin"
                android:padding="10dp"
                android:textSize="18sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:layout_width="match_parent" />

            <TextView
                android:id="@+id/time"
                android:layout_height="48dp"
                android:text="Долгота"
                android:layout_marginEnd="@dimen/normalMargin"
                android:layout_marginStart="@dimen/normalMargin"
                android:padding="10dp"
                android:textSize="18sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:layout_width="match_parent" />

            <TextView
                android:id="@+id/place_name"
                android:layout_height="70dp"
                android:text="Активное \nсобытие"
                android:layout_marginEnd="@dimen/normalMargin"
                android:layout_marginStart="@dimen/normalMargin"
                android:padding="10dp"
                android:textSize="18sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:layout_width="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_text"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="20"
                android:text="@{place.name}"
                android:gravity="center"
                android:textSize="18sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/latitude_text"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:text="@{String.valueOf(place.latitude)}"
                android:gravity="center"
                android:textSize="18sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time_text"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@{String.valueOf(place.longitude)}"
                android:gravity="center"
                android:textSize="18sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/place_name_text"
                android:layout_width="match_parent"
                android:gravity="center"
                android:minHeight="70dp"
                android:layout_height="wrap_content"
                android:text="Сбор металлолома"
                android:textSize="18sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <TextView
                android:id="@+id/desc"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="ОПИСАНИЕ"
                android:background="@color/md_theme_light_tertiary"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textSize="18sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textColor="@color/md_theme_light_primaryInverse" />

            <TextView
                android:id="@+id/desc_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_theme_light_tertiaryContainer"
                android:gravity="center"
                android:padding="20dp"
                android:text="@{place.description}"
                android:textSize="18sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
    </LinearLayout>
</layout>